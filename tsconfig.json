{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types/",
    "noImplicitAny": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "include": ["src/**/*", "types"],
  "exclude": ["**/__tests__", "node_modules"]
}
